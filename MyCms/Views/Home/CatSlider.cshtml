@model IEnumerable<DataLayer.Page>

<!-- Category News Start-->
<div class="cat-news">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Sports</h2>
                <div class="row cn-slider">
                    @foreach (var item in Model)
                    {
                        if (item.GroupID == 1)
                        {
                            <div class="col-md-6">
                                <div class="cn-img">
                                    <img src="/PageImages/@item.ImageName" />
                                    <div class="cn-title">
                                        <a href="/News/@item.PageID">@item.Title</a>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
            <div class="col-md-6">
